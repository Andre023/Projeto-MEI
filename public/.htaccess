<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # ----------------------------------------------------------------------
    # 游 SEGURAN칂A (Adi칞칚o Importante)
    # ----------------------------------------------------------------------
    <IfModule mod_headers.c>
        # Bloqueia que outros sites coloquem o seu site em iframes (evita Clickjacking)
        Header always set X-Frame-Options "SAMEORIGIN"
        # Previne que o navegador tente "adivinhar" o tipo de arquivo (seguran칞a MIME)
        Header always set X-Content-Type-Options "nosniff"
        # Prote칞칚o b치sica contra XSS em navegadores antigos
        Header always set X-XSS-Protection "1; mode=block"
        # Pol칤tica de Referrer para privacidade
        Header always set Referrer-Policy "no-referrer-when-downgrade"
    </IfModule>

    # ----------------------------------------------------------------------
    # 游댢 LARAVEL STANDARD
    # ----------------------------------------------------------------------
    
    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ----------------------------------------------------------------------
# 游댠 OTIMIZA칂츾O DE PERFORMANCE E COMPRESS츾O
# ----------------------------------------------------------------------

# 1. Tenta usar BROTLI (Mais eficiente que Gzip)
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json image/svg+xml application/xml font/woff2
</IfModule>

# 2. Fallback para GZIP (Se Brotli n칚o existir ou falhar)
<IfModule mod_deflate.c>
    <IfModule !mod_brotli.c>
        AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json image/svg+xml application/xml font/opentype font/otf font/ttf application/vnd.ms-fontobject
    </IfModule>
</IfModule>

# ----------------------------------------------------------------------
# 游 CACHE INTELIGENTE (VITE + SPA)
# ----------------------------------------------------------------------

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens e Fontes (Cache Longo - 1 Ano)
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS e JS do Vite (Cache Longo - 1 Ano)
    # Como o Vite gera arquivos com hash (app-XD8s9.js), podemos cachear para sempre.
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    # Arquivos est치ticos (Assets do build) -> Cache P칰blico e Imut치vel
    <FilesMatch "\.(js|css|png|jpg|jpeg|gif|webp|svg|woff|woff2|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # 丘멆잺 IMPORTANTE PARA REACT/INERTIA:
    # O index.php (HTML principal) e JSONs de resposta da API N츾O devem ter cache agressivo.
    # Isso garante que quando voc칡 fizer deploy, o usu치rio receba a nova vers칚o imediatamente.
    <FilesMatch "\.(php|json)$">
        Header set Cache-Control "private, no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>